  background-position: center;
  background-repeat: no-repeat;
}

.flex {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.right-side {
  margin-left: auto;
}
.right-side li {
  margin: 0 5px;
  background-color: transparent;
  border-color: white;
}
.right-side li.active {
  margin: 0 5px;
  background-color: white;
}

#carousel-example-generic .carousel-inner .carousel-caption {
  display: flex;
  left: 0;
  height: 100%;
  width: 100%;
  bottom: 0;
