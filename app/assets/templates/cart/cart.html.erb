<div class="container wrap cart-table">


  <table class="table">
  <h4>Shopping Cart</h4>
  <thead>

    <tr>
      <th>Item</th>
      <th></th>
      <th>Quantity</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="product in current_cart | orderBy : 'product_id'" class="product">
      <th scope="row">*Image*</th>
      <td class="detail"><a href="/things/thing/{{product.product_id}}">{{product.name}}</a></td>
      <td>{{product.quantity}}</td>
      <td>{{product.price | currency}}</td>
      <td change-quantity></td>
    </tr>
  </tbody>
</table>






  
</div>





