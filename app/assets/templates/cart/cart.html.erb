<div class="container wrap cart-table">
  <div class="content">
    <h5>Shopping Cart</h5>
    <div class="row headers">
      <div class="col-sm-2">Item</div>
      <div class="col-sm-6"></div>
      <div class="col-sm-2 centered"><span class="left">Quantity</span></div>
      <div class="col-sm-1 centered">Price</div>
      <div class="col-sm-1"></div>
    </div>
    <div class="cart">
      <div class="row product" ng-repeat="product in current_cart | orderBy : 'name'">
        <div class="col-sm-2 image"><img ng-src="assets/{{ product.image || '//:0' }}" alt="" class="img-responsive"></div>
        <div class="col-sm-6"><a href="/things/thing/{{product.product_id}}">{{product.name}}</a></div>
        <div class="col-sm-2 centered">
          <div class="col-sm-3"></div>
          <div class="col-sm-2"><a href ng-click="changeItemQuantity(product,'down')" class="glyphicon glyphicon-minus"></a></div>
          <div class="col-sm-2">{{product.quantity}}</div>
          <div class="col-sm-2"><a href ng-click="changeItemQuantity(product,'up')" class="glyphicon glyphicon-plus"></a></div>
          <div class="col-sm-3"></div>
        </div>
        <div class="col-sm-1 centered">{{product.total | currency}}</div>
        <div class="col-sm-1"> <a href ng-click="changeItemQuantity(product,'remove')" class="glyphicon glyphicon-trash"></a></div>
      </div>
    </div>
    <div class="row total">
      <div class="col-sm-2"></div>
      <div class="col-sm-6"></div>
      <div class="col-sm-2 right-align">Sub Total</div>
      <div class="col-sm-1 sub-total centered">{{totalPrice | currency}}</div>
      <div class="col-sm-1"></div>
    </div>
    <div class="checkout">
      <button type="Submit" class="checkout" ng-click="checkout()">Checkout</button>
    </div>
  </div>
</div>



